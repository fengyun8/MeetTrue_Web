.btn__noStyle,
.input__noStyle
  outline none
  border none
  box-shadow none
  background none
  
.btn__full,
.input__full
  width 100%

.btn
  outline none
  cursor pointer
  font-weight bold
  border-radius 3px
  white-space nowrap
  display inline-block
  vertical-align middle
  background-color white
  border 1px solid dark-gray
  transition background-color 0.25s cubic-bezier(0.215, 0.61, 0.355, 1)

.btn--auth
  border none
  color white
  font-size 18px
  margin-top 25px
  border-radius 2px
  font-weight normal
  background mt-orange

.btn--link
  border none

.btn--smsCode
  font-size 14px
  height 31px
  line-height 32px
  font-weight normal
  bottom 2px
  right 6px

// input
.input
  border 1px solid gray-cc
  border-radius 5px
  padding 6px 12px
  outline none
  box-shadow inset 0 1px 1px rgba(0,0,0,.075)
  