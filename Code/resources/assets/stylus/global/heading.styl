.heading
  color rgba(0,0,0,.8)
  font-size 16px
  letter-spacing 0
  position relative

.heading--page
  margin-top 40px
  margin-bottom 40px
  font-size 28px
  color dark-gray

.heading--borderedBottom
  border-bottom 1px gray-cc

.heading--borderedTop
  border-top 1px solid gray-cc

.heading--section
  padding-top 35px
  padding-bottom 15px

.heading--section .heading-title
  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Open Sans","Helvetica Neue",sans-serif
  letter-spacing 0
  font-weight 700
  font-style normal
  font-size 18px
  text-transform none
  display block

.heading-description
  color gray-6f
  font-size 14px
  margin-top 20px