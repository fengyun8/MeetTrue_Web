.streamTabs
  height 100%
  overflow-x hidden
  overflow-y hidden
  color rgba(0,0,0,0.44)

.streamTab-item
  float left
  font-size 16px
  font-weight 400
  letter-spacing 0
  text-align center
  font-style normal
  white-space nowrap

.streamTabs--profile
  .streamTab-item
    height 52px
    width 33.2%
    line-height 52px
    &:not(:last-child)
      border-right .5px solid #fff