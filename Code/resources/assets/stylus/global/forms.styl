.form--auth
  transform-origin bottom center
  animation scale-fade .3s forwards cubic-bezier(.8,.02,.45,.91)
  margin 32px 157.5px 0 37.5px
  .form__title
    height 24px
    line-height 24px
    span
      font-size 16px
  .btn__auth
    margin-top 25px
    
.form__field
  margin-top 40px
  .svg
    bottom 6px
    right 6px
    z-index 10
    visibility hidden
    position absolute

  .is-visible
    visibility visible

.form__error,
.form__error--bottom
  position relative
  &:after
    content attr(data-error)
    position absolute
    bottom -1.5em
    left 0
    color red-error
    font-size 14px
    
.form__error,
.form__error .input
  border-color red-error
  
.form-asterisk
  font-weight 300
  letter-spacing 0
  color mt-orange
  font-size normal

.form-row
  margin 30px 0

.form-row:first-child
  margin-top 40px

.form-row:last-child
  margin-bottom 40px

.form-hint
  font-size 14px
  color rgba(0,0,0,.44);

.form-input
  border 1px solid #ccc
  border-radius 2px
  font-size 14px
  color gray-a7
  padding 0.5em 0.7em
  &:focus, &:active
    outline none
    border 1px solid #ccc

.form-heading
  padding-left 0
  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Open Sans","Helvetica Neue",sans-serif
  letter-spacing 0
  color dark-gray
  font-weight 600
  font-style normal
