.form--auth
  transform-origin bottom center
  animation scale-fade .3s forwards cubic-bezier(.8,.02,.45,.91)
  margin 32px 157.5px 0 37.5px
  .form__input
    outline none
    border none
    padding 6px 0
    border-bottom 1px solid gray-cc
  .form__title
    height 24px
    line-height 24px
    span
      font-size 16px
  .btn__auth
    margin-top 25px
    
.form__field
  margin-top 40px
  .svg
    bottom 6px
    right 6px
    z-index 10
    visibility hidden
    position absolute

  .is-visible
    visibility visible

.form__error,
.form__error--bottom
  position relative
  &:after
    content attr(data-error)
    position absolute
    bottom -1.5em
    left 0
    color red-error
    font-size 14px
    
.form__error,
.form__error .input
  border-color red-error
  
