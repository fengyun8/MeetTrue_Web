.avatar
  position relative
  &:hover
    .svg--edit
      opacity 1
      visibility visible
  .svg--edit
    fill white
    top 50%
    left 50%
    opacity 0
    visibility hidden
    margin-top -12px
    margin-left -12px
    transition opacity, visibility .3s ease-in-out
    position absolute

.avatar-overlay
  position absolute
  top 0
  width 100%
  height 100%
  background rgba(0,0,0,.3)

.avatar--110x110
  width 110px
  height 110px

.avatar--square, .avatar-overlay
  border-radius 6px
  border 4px solid rgba(255, 255, 255, .3)
  box-shadow 0 2px 4px rgba(0, 0, 0, .5)

.avatar--square
  .avatar-overlay
    top -4px
    right -4px