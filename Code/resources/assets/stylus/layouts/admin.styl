body
  background #f6f7f7

main
  position fixed
  height 100%
  width 100%
  align-items stretch
  display flex
  margin 0 auto
  flex-flow row nowrap

.content
  background-color white
  box-shadow 0 2px 4px rgba(41,63,84,0.24),0 2px 6px rgba(41,63,84,0.12)
  flex 1 1 100%
  overflow auto
  .search
    margin 0
    border-bottom 1px solid gray-e3
    line-height 4em
  .svg__search
    padding 0 0.5em 0 2em
    width 16px
    height 16px
  .search__input
    width calc(100% - 70px)
  
.pageContent
  padding 1em 2em 0

.toolBar
  line-height 40px
  .toolBar__title
    font-size 30px
    font-weight bolder
  .toolBar__btn
    border 1px solid #2a94d6
    background-color #2a94d6
    color #fff
    line-height 40px
    padding 0 1em
    border-radius 5px
    float right
    box-shadow inset 0 1px 1px rgba(0,0,0,.075)

.operatingFloor
  margin-top 2em
  .operatingFloor__titleBar,
  .operatingFloor__itemBar
    display flex
    flex-flow row nowrap
    border-bottom 1px solid gray-e3
  .operatingFloor__title,
  .operatingFloor__item
    flex 1 1 33%
    flex-center()
    
  .operatingFloor__item
    img,
    input
      width 90%
  .operatingFloor__btn
    border 1px solid #2a94d6
    background-color #2a94d6
    color #fff
    line-height 30px
    padding 0 1em
    border-radius 3px
    float right
    box-shadow inset 0 1px 1px rgba(0,0,0,.075)