.nav
  height 65px
  width 100%
  line-height 65px
  box-sizing border-box
  padding 0 2em
  @media screen and (max-width: max-screen)
    padding 0 10px
  // @media screen and (max-width: medium-screen)

.nav__content
  margin 0 auto
  padding 2px 0

.nav--fixed
  z-index 100
  position fixed
  box-shadow 0 2px 4px rgba(0, 0, 0, .1)

.nav__logo--white
  display none

.nav__headerImg
  bgi-center()
  display inline-block
  width 50px
  height 50px
  vertical-align middle
  border-radius 2px
  box-shadow 0 0 2px rgba(0,0,0,.3)

.nav__headerImg--auth
  position relative
  &:after
    position absolute
    bottom 0
    right -5px
    width 15px
    height 15px
    content " "
    display block
    background-image url('/images/icon-authenticated.png')
    bgi-center()

.nav__authIcon
  width 15px
  height 15px
  display inline-block
  background-image url('/images/icon-authenticated.png')
  vertical-align sub
  bgi-center()
  
.nav__loginBox
  a
    padding 0 5px

.nav__menu
  margin-left 8.3%
  .nav__item
    padding 0 20px
    &:not(:last-child)
      position relative
      &:after
        position absolute
        right -5px
        content "|"

.nav__rightPart
  .nav__item
    display inline-block
    margin 0 10px
    &:not(:last-child)
      position relative
      &:after
        position absolute
        right -13px
        top 0
        content "|"

.nav--white
  linear-gradient(rgba(0,0,0,.3),rgba(0,0,0,0),rgba(0,0,0,.15))
  box-shadow none
  color #fff
  .nav__logo--colour
    display none
  .nav__logo--white
    display inline-block
  .nav__item
    text-shadow 1px 1px 1px rgba(0,0,0,.3)